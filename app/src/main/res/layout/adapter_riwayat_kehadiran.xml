<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <ImageView
            android:id="@+id/gbr_keluar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:background="@drawable/ic_adapter_out"></ImageView>

        <ImageView
            android:id="@+id/gbr_masuk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_adapter_in"></ImageView>

        <LinearLayout
            android:id="@+id/ly_absen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal : ">
                </TextView>
                <TextView
                    android:id="@+id/tgl_kehadiran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-10-14"
                    android:textColor="#4D8CD9"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkin : ">
                </TextView>
                <TextView
                    android:id="@+id/checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:41"
                    android:textColor="#00B04E"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout : ">
                </TextView>
                <TextView
                    android:id="@+id/checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.50"
                    android:textColor="#FF9800"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_ket"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_green_round">
            <TextView
                android:id="@+id/absen_masuk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MASUK"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/dinas_luar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DINAS LUAR"
                android:textColor="#00B04E"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:id="@+id/absen_pulang"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PULANG"
                android:textColor="#E95557"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp">
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>