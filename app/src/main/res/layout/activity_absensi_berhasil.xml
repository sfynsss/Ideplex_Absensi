<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.AbsensiBerhasilActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/logo_kerjapintar2">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berhasil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/green_dark">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="presensi "
            android:textSize="18sp"
            android:textColor="@color/green_dark">
        </TextView>
        <TextView
            android:id="@+id/tipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_dark">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" anda telah tercatat"
            android:textSize="18sp"
            android:textColor="@color/green_dark">
        </TextView>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="success-check.json">
    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presensi tercatat pada :"
        android:textSize="16sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_yellow_round"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="64dp"
        android:paddingVertical="8dp"
        android:gravity="center">
        <TextView
            android:id="@+id/jam_absen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#CE3032">
        </TextView>
        <TextView
            android:id="@+id/wib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" WIB"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#CE3032"
            android:visibility="gone">
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="128dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="8dp"
        android:text="Kembali"
        android:textAllCaps="false"></Button>


</LinearLayout>