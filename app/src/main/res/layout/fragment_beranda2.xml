<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.BerandaFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ly_header"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/dashboard_bg_header2"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="160dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/logo_kerjapintar2"></ImageView>

                    <TextView
                        android:id="@+id/txt_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_logo"
                        android:layout_marginTop="4dp"
                        android:text="Selamat datang di"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/txt_soebandi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_welcome"
                        android:text="E-Presensi KERJA PINTAR"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="-50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/img_profil"
                            android:layout_width="78dp"
                            android:layout_height="82dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/person_rectangle"></ImageView>

                        <TextView
                            android:id="@+id/nama_pengguna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/img_profil"
                            android:text="nama_user"
                            android:textColor="@color/green_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/nip_pengguna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nama_pengguna"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/img_profil"
                            android:text="no_pegawai"
                            android:textColor="@color/black"
                            android:textSize="13sp"></TextView>

                        <TextView
                            android:id="@+id/jabatan_pengguna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nip_pengguna"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/img_profil"
                            android:text="jabatan"
                            android:textSize="13sp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jabatan_pengguna"
                            android:layout_toRightOf="@+id/img_profil">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="Kelompok Shift : "
                                android:textColor="@color/green_dark"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/shift_pengguna"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/green_dark"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                android:text="Pagi - Jumat"
                                android:textColor="#FFF"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Menu Beranda"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9"
                    android:layout_marginTop="5dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3">

                        <LinearLayout
                            android:id="@+id/btn_jadwal_saya"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bt_white_round">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/dashboard_bg_jadwal"></ImageView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_jadwal_saya"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Jadwal saya"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3">

                        <LinearLayout
                            android:id="@+id/btn_riwayat_kehadiran"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bt_white_round">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/dashboard_bt_riwayat"></ImageView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_riwayat_kehadiran"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Riwayat"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3">

                        <LinearLayout
                            android:id="@+id/btn_pengajuan_izin"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bt_white_round">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/dashboard_bt_izin"></ImageView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_pengajuan_izin"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Cuti / Izin"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:text="Riwayat Durasi Kerja"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp">

                    <ListView
                        android:id="@+id/list_riwayat_kehadiran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        tools:listitem="@layout/adapter_durasi_kerja"></ListView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>